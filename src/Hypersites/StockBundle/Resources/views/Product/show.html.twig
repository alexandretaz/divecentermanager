{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Mincost</th>
                <td>{{ entity.minCost }}</td>
            </tr>
            <tr>
                <th>Maxcost</th>
                <td>{{ entity.maxCost }}</td>
            </tr>
            <tr>
                <th>Supplierean</th>
                <td>{{ entity.supplierEan }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Contents</th>
                <td>{{ entity.contents }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('stock_product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('stock_product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
