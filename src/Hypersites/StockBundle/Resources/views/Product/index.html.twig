{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Mincost</th>
                <th>Maxcost</th>
                <th>Supplierean</th>
                <th>Description</th>
                <th>Contents</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('stock_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.minCost }}</td>
                <td>{{ entity.maxCost }}</td>
                <td>{{ entity.supplierEan }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.contents }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('stock_product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('stock_product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('stock_product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
